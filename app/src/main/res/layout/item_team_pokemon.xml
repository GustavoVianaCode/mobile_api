<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#F8F9FA"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <!-- Imagem do Pokémon -->
        <ImageView
            android:id="@+id/ivTeamPokemonSprite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/pokemon_sprite"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- Nome do Pokémon -->
        <TextView
            android:id="@+id/tvTeamPokemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IVYSAUR"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            tools:text="CHARIZARD" />

        <!-- Botão Remover -->
        <ImageButton
            android:id="@+id/btnRemoveFromTeam"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/remove_from_team"
            app:tint="#E74C3C"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
