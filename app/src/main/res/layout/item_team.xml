<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com nome e ações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Time Principal" />

            <TextView
                android:id="@+id/tvTeamSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_chip"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp"
                tools:text="3/6" />

            <ImageButton
                android:id="@+id/btnDeleteTeam"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Deletar time"
                app:tint="@color/danger" />
        </LinearLayout>

        <!-- RecyclerView horizontal com pokémons do time -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTeamPokemons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_team_pokemon"
            tools:itemCount="3" />

        <TextView
            android:id="@+id/tvEmptyTeam"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Time vazio\nAdicione Pokémon na PokéDex!"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
